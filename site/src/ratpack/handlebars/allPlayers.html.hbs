{{> partials/header.html}}
{{> partials/navigation.html teamName=teamName}}
{{#if single true}}
    {{>partials/singleTeamPartials/teamSidebar.html teamId}}
{{else}}
    {{> partials/sidebar.html}}
{{/if}}
{{> partials/topbar.html}}
<!-- Begin: Content -->
<section id="content" class="table-layout animated fadeIn">
    <!-- begin: .tray-center -->
    <div class="tray tray-center">
        <body>
        <div class="panel">
            <div class="panel-body pn">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive">
                            <table class="table admin-form theme-warning tc-checkbox-1 fs13">
                                <thead>
                                <tr class="bg-light">
                                    <th class="text-center hidden-sm hidden-xs">Select</th>
                                    <th class="hidden-sm hidden-xs">Image</th>
                                    <th class="">Name</th>
                                    <th class="hidden-sm hidden-xs">Team Name</th>
                                    <th class="hidden-sm hidden-xs">Goals</th>
                                    <th class="hidden-sm hidden-xs">Assists</th>
                                    <th class="">View</th>
                                    <th class="hidden-sm hidden-xs">Status</th>

                                </tr>
                                </thead>
                                <tbody>
                                {{#each model}}
                                    <tr>
                                        <td class="text-center hidden-sm hidden-xs">
                                            <label class="option block mn">
                                                <input type="checkbox" name="mobileos" value="FR">
                                                <span class="checkbox mn"></span>
                                            </label>
                                        </td>
                                        <td class="w100 hidden-sm hidden-xs">
                                            <img class="img-responsive mw40 ib mr10" title="user"
                                                 src="{{profileImageUrl}}" style="height:55px; width:100%;">
                                        </td>
                                        <td class="">{{name}}</td>
                                        <td class="hidden-sm hidden-xs">{{teamName}}</td>
                                        <td class="hidden-sm hidden-xs">{{totalGoals}}</td>
                                        <td class="hidden-sm hidden-xs">{{assists}}</td>
                                        <td class=""><a href="players/{{id}}">View</a></td>
                                        <td class="hidden-sm hidden-xs">
                                            <div class="btn-group">
                                                <button type="button"
                                                        class="btn btn-success br2 btn-xs fs12 dropdown-toggle"
                                                        data-toggle="dropdown" aria-expanded="false"> Active
                                                    <span class="caret ml5"></span>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </body>
    </div>
</section>
{{> partials/footer.html}}
</html>
